        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading) {
    if (isLoading || newValue == '') {
        return;
    }

    if (newValue.length === 8) {
		var ga = new GlideAjax("x_1465196_acai_now.ViaCepService");

		ga.addParam("sysparm_name", "getAddressByCEP");
		ga.addParam("sysparm_cep", newValue);

		ga.getXML(function (response) {
			var answer = response.responseXML.documentElement.getAttribute("answer");
			
			var data = JSON.parse(answer);

			g_form.setValue("address", data.logradouro);
			g_form.setValue("district", data.bairro);
			g_form.setValue("state", data.uf);
			g_form.setValue("city", data.localidade);
		});
	}
}]]></script>
